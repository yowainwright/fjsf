{
  "name": "fjsf",
  "version": "0.2.8",
  "description": "CLI tool for fuzzy searching npm scripts and JSON files with dot notation in monorepos",
  "keywords": [
    "fuzzy",
    "search",
    "json",
    "cli",
    "npm",
    "scripts",
    "monorepo",
    "package-json",
    "bun"
  ],
  "author": "Jeff Wainwright <me@jeffry.in> (https://jeffry.in)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yowainwright/fjsf"
  },
  "type": "module",
  "bin": {
    "fjsf": "./scripts/bin-wrapper.js"
  },
  "files": [
    "bin/fjsf-qjs-*",
    "scripts/bin-wrapper.js"
  ],
  "scripts": {
    "dev": "bun run build:qjs && ./bin/fjsf-qjs",
    "build:qjs": "bun scripts/build-qjs.ts",
    "test": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun run tests/e2e/scripts/run-all.ts",
    "lint": "oxlint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "postinstall": "bun run scripts/install-hooks.ts",
    "prepublishOnly": "bun run format:check && bun run lint && bun run typecheck && bun test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": true,
      "requireUpstream": true
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": "bun run build:qjs"
    }
  }
}
