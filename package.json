{
  "name": "fjsf",
  "version": "0.2.1",
  "description": "CLI tool for fuzzy searching npm scripts and JSON files with dot notation in monorepos",
  "keywords": [
    "fuzzy",
    "search",
    "json",
    "cli",
    "npm",
    "scripts",
    "monorepo",
    "package-json",
    "bun"
  ],
  "author": "Jeff Wainwright <me@jeffry.in> (https://jeffry.in)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yowainwright/fjsf"
  },
  "type": "module",
  "bin": {
    "fjsf": "./src/cli.ts"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir ./dist --target bun --minify",
    "build:binary": "bun build src/cli.ts --compile --outfile ./dist/fjsf",
    "build:binary:linux": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile ./dist/fjsf-linux-x64",
    "build:binary:mac": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile ./dist/fjsf-darwin-x64 && bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile ./dist/fjsf-darwin-arm64",
    "build:binary:windows": "bun build src/cli.ts --compile --target=bun-windows-x64 --outfile ./dist/fjsf-windows-x64.exe",
    "build:binary:all": "bun run build:binary:linux && bun run build:binary:mac && bun run build:binary:windows",
    "build:qjs": "bash scripts/build-qjs.sh",
    "build:qjs:bundle": "mkdir -p dist/qjs && bun build ./src/browser/index.ts --outfile dist/qjs/core.js --target browser --minify --format esm",
    "test": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun run tests/e2e/scripts/run-all.ts",
    "lint": "oxlint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "postinstall": "bun run scripts/install-hooks.ts",
    "prepublishOnly": "bun run format:check && bun run lint && bun run typecheck && bun test && bun run build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.24.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": true,
      "requireUpstream": true
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "releaseNotes": "git log --pretty=format:'* %s (%h)' ${latestTag}...HEAD"
    },
    "npm": {
      "publish": true
    }
  }
}
